@model IEnumerable<Plaza.Models.RoomType>

<p>
    @Html.ActionLink("Add RoomType", "Create", new { id = 1 }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaxGuests)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaxGuests)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a href="@Url.Action("Edit", "RoomType", new {id = item.Id})" class="">
                <i class="glyphicon glyphicon-edit"></i>
                <span>
                    <strong>Edit</strong>
                </span>
            </a>
            |
            <a href="@Url.Action("Delete", "RoomType", new {id = item.Id})" class="">
                <i class="glyphicon glyphicon-remove"></i>
                <span>
                    <strong>Delete</strong>
                </span>
            </a>
        </td>
    </tr>
}

</table>
