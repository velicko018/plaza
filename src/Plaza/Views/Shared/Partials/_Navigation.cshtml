@using Microsoft.AspNetCore.Http
@model Plaza.Models.Login
<header class="header transp sticky">
    <!-- available class for header: .sticky .center-content .transp -->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="logo">
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Rooms">Rooms</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    @{
                        if (String.IsNullOrEmpty(Context.Session.GetString("ID")))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    Log In
                                </a>
                                <ul class="dropdown-menu" style="padding: 10px;">
                                    <li>
                                        <form asp-controller="Home" asp-action="Login" method="post" class="clearfix">
                                            <div class="mg-contact-form-input">
                                                <label asp-for="Email" style="color:white"></label>
                                                <input asp-for="Email" type="email" id="email" name="email" class="form-control" />
                                            </div>
                                            <div class="mg-contact-form-input">
                                                <label asp-for="Password" style="color:white"></label>
                                                <input asp-for="Password" type="password" id="password" name="password" class="form-control" />
                                            </div>
                                            <div class="mg-contact-form-input">
                                                <button class="btn btn-main pull-right">Log In</button>
                                            </div>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    User
                                </a>
                                <ul class="dropdown-menu" style="padding: 10px;">
                                    <li><a asp-area="" asp-controller="Home" asp-action="Edit">Edit Profile</a></li>
                                    @{
                                        if (Boolean.Parse(Context.Session.GetString("ADMIN")))
                                        {
                                            <li><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                                        }
                                    }
                                    <li><a asp-area="" asp-controller="Home" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <div class="mg-search-box-cont pull-right">
                <a href="#" class="mg-search-box-trigger"><i class="fa fa-search"></i></a>
                <div class="mg-search-box">
                    <form>
                        <input type="text" name="s" class="form-control" placeholder="Type Keyword...">
                        <button type="submit" class="btn btn-main"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
</header>
